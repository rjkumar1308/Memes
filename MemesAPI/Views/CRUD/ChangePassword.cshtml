<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script src="../Scripts/angular.min.js"></script>
    <script src="../Scripts/MyScripts/Module.js"></script>
    <script src="../Scripts/MyScripts/MyOptions.js"></script>
    <script src="../Scripts/MyScripts/ChangePasswordLogic.js"></script>
</head>
<body ng-app="appmodule" ng-controller="changepasswordcontroller">
    <h1>Change Password</h1>
    <table class="table table-bordered table-striped table-condensed" style="width:35%">
        <tr align="center">
            <td>Old Password:</td>
            <td>
                <input type="password" class="form-control"
                       ng-model="useroldpassword" />
            </td>
        </tr>
        <tr align="center">
            <td>New Password:</td>
            <td>
                <input type="password"
                       class="form-control"
                       ng-model="userLoginPassword" />
            </td>
        </tr>
        <tr align="center">
            <td>Confirm Password:</td>
            <td>
                <input type="password" class="form-control"
                       ng-model="userLoginPasswordCnf" />
            </td>
        </tr>
    </table>
    <input type="button" value="Back" class="btn"
           ng-click="back()" style="width:10%;margin-right:1%" />
    <input type="button" value="Change Password" class="form-control btn btn-success"
           ng-click="changepassword()" style="width:17%;" />




    <div>
        <h4 style="color:red;">{{responseData}}</h4>
        <h4 style="color:green;">{{responseMessage}}</h4>
    </div>


</body>
</html>