<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
    <script src="../../Scripts/angular.min.js"></script>
    <script src="../../Scripts/MyScripts/Module.js"></script>
    <script src="../../Scripts/MyScripts/MyOptions.js"></script>
    <script src="../../Scripts/MyScripts/addnewtags.js"></script>
    <meta charset="utf-8" />
    <title></title>
</head>

<body ng-app="appmodule" ng-controller="addtagscontroller">
    <h1> ADD Tags </h1>

    <table class="table table-bordered table-striped table-condensed" style="width:35%">

        <tr align="center">
            <td>New Tags:</td>
            <td>
                <input type="text" class="form-control"
                       ng-model="tagsstring"
                       id="tags" />
            </td>
        </tr>
        <tr align="center">
            <td>
                <input type="button" class="btn" value="Back" ng-click="back()" />
            </td>
            <td>
                <input type="button" value="Add Tags" class="form-control btn btn-success"
                       ng-click="addtags()" />
            </td>
        </tr>
    </table>

    <div>
        <h4 style="color:green;">{{responseData}}</h4>
        <h4 style="color:red;">{{responseError}}</h4>
    </div>


</body>
</html>