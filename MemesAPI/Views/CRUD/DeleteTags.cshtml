<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
    <script src="../../Scripts/angular.min.js"></script>
    <script src="../../Scripts/MyScripts/Module.js"></script>
    <script src="../../Scripts/MyScripts/MyOptions.js"></script>
    <script src="../../Scripts/MyScripts/deleteexistingtags.js"></script>
    <meta charset="utf-8" />
    <title></title>
</head>

<body ng-app="appmodule" ng-controller="deletetagscontroller">
    <h1> DELETE Tags </h1>

    <table class="table table-bordered table-striped table-condensed" style="width:35%">

        <tr align="center">
            <td>Delete Tags:</td>
            <td>
                <input type="text" class="form-control"
                       ng-model="tagsstring"
                       id="tags" />
            </td>
        </tr>
        <tr align="center">
            <td>
                <input type="button" class="btn" value="Back" ng-click="back()" />
            </td>
            <td>
                <input type="button" value="Delete Tags" class="form-control btn btn-success"
                       ng-click="deletetags()" />
            </td>
        </tr>
    </table>

    <div>
        <h4 style="color:green;">{{responseData}}</h4>
        <h4 style="color:red;">{{responseError}}</h4>
    </div>


</body>
</html>