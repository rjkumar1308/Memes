<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script src="../Scripts/angular.min.js"></script>
    <script src="../Scripts/MyScripts/Module.js"></script>
    <script src="../Scripts/MyScripts/MyOptions.js"></script>
    <script src="../Scripts/MyScripts/AddNewMeme.js"></script>
</head>
<body ng-app="appmodule" ng-controller="addnewmemecontroller">
    <h1>Add New Meme</h1>
    
    <table class="table table-bordered table-striped table-condensed" style="width:35%">
        <tr align="center">
            <td>URL:</td>
            <td>
                <input type="text" class="form-control"
                       ng-model="url" />
            </td>
        </tr>
        <tr align="center">
            <td>Tags:</td>
            <td>
                <input type="text"
                       class="form-control"
                       ng-model="tagsstring" />
            </td>
        </tr>
        <tr align="center">
            <td>
                <input type="button" class="btn" value="Back" ng-click="back()" />
            </td>
            <td> 
                <input type="button" value="Add New Meme" class="form-control btn btn-success"
                       ng-click="addnewmeme()" />
            </td>
        </tr>
    </table>

    <div>
        <h4 style="color:green;">{{responseData}}</h4>
        <h4 style="color:red;">{{responseError}}</h4>
    </div>


</body>
</html>