<html ng-app="appmodule">
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../Scripts/angular.min.js"></script>
    <script src="../Scripts/MyScripts/Module.js"></script>
    <script src="../Scripts/MyScripts/MyOptions.js"></script>
    <script src="../Scripts/MyScripts/bootstrap.js"></script>

</head>
<body ng-controller="optioncontroller">
    <h1>Memes Information</h1>
    <div class="container" style="margin-bottom:1%">
        <input type="button" class="btn" value="Add New Meme" ng-click="addnewmeme()" style="margin-left:-15px;margin-top:0.2%;font-weight:bold" />
        <div class="dropdown" style="float:right;margin-top:10px;">
            <a href="#" id="imageDropdown" data-toggle="dropdown">
                <img src="../../dropdown.png" height=20px width=20px style="margin-top:8px;margin-right:16px">
            </a>
            <ul class="dropdown-menu  dropdown-menu-left pull-right" role="menu" aria-labelledby="imageDropdown">
                <li role="presentation"><a role="menuitem" tabindex="-1" ng-click="changepassword()" class="btn"  style="width:100%;text-align: left;">Change Password</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" ng-click="deleteaccount()" class="btn"  style="width:100%;text-align: left;">Delete Account</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" ng-click="logout()" class="btn" style="width:100%;text-align: left;">Log Out</a></li>
            </ul>
        </div>
        
        <span style="float:right; margin-right:10px;font-size:x-large;font-weight:bold;margin-top:10px;">Hello, {{userName}}</span>
        
    </div>

    <table class="table table-striped table-striped table-bordered">
        <thead>
            <tr style="font-size:large  ;">
                <th class="text-center">Image</th>
                <th class="text-center">Tags</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody ng-repeat="meme2 in Memes">
            <tr ng-repeat="meme in meme2" align="center">
                <td>
                    <span><img src={{meme.Url}} height=200px width=200px style="margin-bottom:10px;margin-top:10px"></span>
                </td>
                <td style="padding-top:20px; width:30%">
                    <span style="font-size:medium;">{{meme.Tags.join(', ')}}</span>
                </td>
                <td>
                    <input type="button" value="Update Image" class="form-control btn btn-success"
                           ng-click="updateurl(meme.ImageId)" style="margin-top:12px;margin-bottom:8px;" />
                    <input type="button" value="Add Tags" class="form-control btn btn-success"
                           ng-click="addtag(meme.ImageId)" style="margin-top:8px;margin-bottom:8px;" />
                    <input type="button" value="Delete Tags" class="form-control btn btn-success"
                           ng-click="deletetag(meme.ImageId)" style="margin-top:8px;margin-bottom:8px;" />
                    <input type="button" value="Delete Image" class="form-control btn btn-success"
                           ng-click="deleteimage(meme.ImageId)" style="margin-top:8px;margin-bottom:12px;" />
                </td>
            </tr>
        </tbody>
    </table>



</body>
</html>