<html ng-app="appmodule">
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script src="../Scripts/angular.min.js"></script>
    <script src="../Scripts/MyScripts/Module.js"></script>
    <script src="../Scripts/MyScripts/MyOptions.js"></script>

</head>
<body ng-controller="optioncontroller">
    <h1>Memes Information</h1>

    <h2>
        <input type="button" class="btn" value="Add New Meme" ng-click="addnewmeme()" />
        <input type="button" class="btn" value="LogOut" ng-click="logout()" style="float:right;" />
        <span style="float:right; margin-right:10px">{{userName}}</span>
    </h2>

    <table class="table table-striped table-striped table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Tags</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody ng-repeat="meme2 in Memes">
            <tr ng-repeat="meme in meme2"  align="center">
                <td>
                    <span><img src={{meme.Url}} height=200px width=200px style="margin-bottom:10px;margin-top:10px"></span>
                </td>
                <td style="padding-top:20px;">
                    <span>{{meme.Tags}}</span>
                </td>
                <td>
                    <input type="button" value="Update Image" class="form-control btn btn-success"
                           ng-click="updateurl(meme.ImageId)" style="margin-top:12px;margin-bottom:8px;"/>
                    <input type="button" value="Add Tags" class="form-control btn btn-success"
                           ng-click="addtag(meme.ImageId)" style="margin-top:8px;margin-bottom:8px;" />
                    <input type="button" value="Delete Tags" class="form-control btn btn-success"
                           ng-click="deletetag(meme.ImageId)" style="margin-top:8px;margin-bottom:8px;" />
                    <input type="button" value="Delete Image" class="form-control btn btn-success"
                           ng-click="deleteimage(meme.ImageId)" style="margin-top:8px;margin-bottom:12px;" />
                </td>
            </tr>
        </tbody>
    </table>



</body>
</html>