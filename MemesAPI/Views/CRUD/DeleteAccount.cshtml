<body ng-app="appmodule" ng-controller="deleteaccountcontroller">
    <h1>Delete Account</h1>
    <table class="table table-bordered table-striped table-condensed" style="width:35%">
        <tr align="center">
            <td>Password:</td>
            <td>
                <input type="password" class="form-control"
                       ng-model="Password" />
            </td>
        </tr>
    </table>
    <input type="button" value="Back" class="btn"
           ng-click="back()" style="width:10%;margin-right:1%" />
